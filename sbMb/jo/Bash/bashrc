#!/bin/bash
# vim: fdl=1 ft=sh sw=2:

# ~/.bashrc in an Arch install on my sprayed brown Multivision box system
# symlinked in  $ARCHBUILDS/build-scripts/17-symlinks.sh
#  e -la ~/.bashrc

[[ $- != *i* ]] && return  # if not running interactively, don't do anything

export CHROOT=/mnt/SD480GSSDPlus/chroot
export VsLocation=/mnt/ST4000VN008  # path to my video store

#=> 0 load the rest of my bashrc
source $Bash/bashrc

#=> 1 OBS mkv grabs convert
ignore () { stat -c '%Y  %s  %n' "$1" >> $ulL/OBSmkv/ignore; }
# ignore <an_mkv_to_ignore>
# for m in *.mkv; do ignore "$m"; done

omc()
{
    cd $VsLocation/OBSmkvGrabs
    echo "(moved to $PWD to run OBSmkvShrink.sh)"
    bash shrink.sh  # populates  $VsLocation/OBSmkvGrabs/OBSmkvGrabs
    # (- see  $ITstack/unix_like-GNULinux/OBSmkv/shrink.sh)
    fin
}

