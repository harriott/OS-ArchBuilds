ra () {
  pactl set-sink-volume 0 60%  # master volume to non-distorting level
  if [ $1 ]; then o=$1; else o=a; fi
  rec -c 2 $o.flac  # SoX
}; export -f ra  # ra <stereoAudioRecording>

#=> Bash interface
