#!/bin/sh
# vim: ft=sh sw=2:

# here I export variables that could also be useful as root
# . $ARCHBUILDS/Bash/export-storage

# Variable naming constraints:
#  avoid names that only differ by case
#  use names that grep unambiguously throughout all of my notes directories

# for initial build of Arch:
# for jo:
#  symlinked in  $bSc/symlinks/jo-0.sh
#  sourced by  $Bash/bash_profile
# for root:
#  symlinked in  $bSc/symlinks/root.sh
#  sourced by  $ARCHBUILDS/root/bash_profile

#=> 0 core
# $myDrA  &  $Storage  are pre-defined in  $machBld/export-machine

#=> 0 mail
export maild=/home/jo/.local/share/mail  # used also in  muttrc-*

#=> 1 host
export host=$(uname -n)
# - for  $ABjo/Openbox/conkyrc  &  $ARCHBUILDS/Bash/bashrc-generic

#=> 2 $DROPBOX, or not
export vimfiles=~/.vim
if [[ $myDrA == 1 ]]; then
  export DROPBOX=$Storage/Dropbox
  # - keep  DROPBOX  capitalised for finding it without need for $
  export core=$DROPBOX/JH/core
    export ITstack=$core/IT_stack
      export CrPl=$ITstack/CP  # used in  $Bash/bashrc-console  & build scripts
      export ulLinux=$ITstack/unix_like-linux  # was $ulGL, then ulL
        export machLg=$ulLinux/Arch/$host  # as opposed to  $machBld
        export ulLB=$ulLinux/Bash  # used in  $ARCHBUILDS/QR.txt
      export onGH=$ITstack/onGitHub
        export vimfiles=$onGH/vimfiles
fi

#=> 3 $ARCHBUILDS, or not
unset ARCHBUILDS
if [ $onGH ]; then
  export ARCHBUILDS=$onGH/ArchBuilds
else
  AB=~/ArchBuilds; [ -d $AB ] && export ARCHBUILDS=$AB
  hjAB=/home/jo/ArchBuilds; [ -d $hjAB ] && export ARCHBUILDS=$hjAB
fi
if [ $ARCHBUILDS ]; then
  export ABjo=$ARCHBUILDS/jo
    export Bash=$ABjo/Bash
  export BAT_CONFIG_PATH=$ABjo/bat.conf  # for the bat pager
  export bSc=$ARCHBUILDS/build-scripts
      export machBld=$ARCHBUILDS/$host  # as opposed to  $machLg
  export clMail=$ABjo/clm  # used in  bashrc-clm  and  muttrc-*
  export tmx=$ARCHBUILDS/tmux  # used in  tmux.conf
fi

