# vim: set fdl=1:

# managed by my  $ARCHBUILDS/build-scripts/24-as_root-rsnapshot_automated.sh

[Unit]
Description=rsnapshot hourly backup

[Timer]
# Run hourly
OnCalendar=*-*-* *:00:00
Persistent=true
Unit=rsnapshot@hourly.service
# runs  hourly  instance of  $ARCHBUILDS/etc/systemd/rsnapshot/ampersand.service

[Install]
WantedBy=timers.target

