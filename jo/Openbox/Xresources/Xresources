!  xrdb $Openbox/Xresources/Xresources  or  xrdb ~/.Xresources
! apostrophes in comments can trigger warnings, so dont use them

! These dont have any visible effect:
xman*directoryFontNormal: -*-ubuntumono-*-r-*-*-*-120-*-*-*-*-*-*
xman*manualFontNormal:    -*-ubuntumono-*-r-*-*-*-120-*-*-*-*-*-*
! - even though:
!  $ appres xman  shows that they are set
!  $ xman -notopbox &  still reports conversion error

! ------------
! rxvt-unicode
! ------------

! default terminal wide enough for  ip link :
URxvt.geometry: 115x24

#include "/home/jo/.Xresources-LukeSmith-gruvbox"

! A large scrollback buffer (over 8x the default):
URxvt.saveLines: 8192

!-*- Perl extensions -*-
URxvt.perl-ext-common: autocomplete-ALL-the-things,default,keyboard-select,matcher,resize-font,selection-to-clipboard,xresources-256

URxvt.cursorUnderline:    true
URxvt.keysym.M-C-slash:   perl:aAtt:word-complete
URxvt.keysym.M-question:  perl:aAtt:fuzzy-complete
URxvt.keysym.M-quotedbl:  perl:aAtt:skeleton-complete
URxvt.url-launcher:       /usr/bin/firefox
URxvt.underlineURLs:      True
URxvt.keysym.M-e:         perl:keyboard-select:activate
URxvt.keysym.M-s:         perl:keyboard-select:search
URxvt.matcher.button:     1
URxvt.clipboard.autocopy: true

! font
! ----
! echo "m-0 in URxvt.font"; echo "${tpf7b}m-0 in URxvt.boldFont${tpfn}"
! cmus  &  tmux  folders show in  URxvt.boldFont

! Caskaydia Cove Nerd Font Complete Mono
URxvt.letterSpace: -1
URxvt.font: xft:CaskaydiaCoveNerdFontMono:size=8
!  better than Ubuntu Mono, except the hyphen runs into adjoining letters
! URxvt.boldFont: xft:CaskaydiaCoveNerdFontMono:bold
!  gets too small if size of Regular is 8

! Hack Bold Nerd Font Complete Monor
URxvt.boldFont: xft:HackNerdFontMono:Bold

! Ubuntu Mono - my long-time preferred
! URxvt.letterSpace: -1 ! preferred now
! URxvt.font: xft:ubuntumono:size=9
!  cant show icons in  lsd
! URxvt.boldFont: xft:ubuntumono:bold

