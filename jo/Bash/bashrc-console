#=> Bash interface
# bigger command history
export HISTFILESIZE=10000
export HISTSIZE=1000

# command not found hook
source /usr/share/doc/pkgfile/command-not-found.bash

# for nnn & tmux
export EDITOR=nvim
export VISUAL=gvim

# pipx shell completions
eval "$(register-python-argcomplete pipx)"

#==> prompt
# a colorised (bold blue) prompt, with git support
source /usr/share/git/completion/git-prompt.sh
GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1=$(__git_ps1 " (%s)")  # comment out if entering a huge repository such as  nerd-fonts
longPrompt='\[\e[1;34m\][\w$GIT_PS1]\$\[\e[0m\] '
shortPrompt=false
PS1=$longPrompt

# toggle short prompt
sp (){
  if $shortPrompt; then
    PS1=$longPrompt
    shortPrompt=false
  else
    PS1='\[\e[1;34m\][\W]\$\[\e[0m\] '
    shortPrompt=true
  fi
}

#=> file manage
alias c='clifm .'
alias rsA0='bash $onGH/rsync-portabledrives/rsync-Dr0archive.sh'
alias rsA1='bash $onGH/rsync-portabledrives/rsync-Dr1archive.sh'

locx () { locate -i $1 | xcol $1; }

#==> Git
alias ga='git add'
alias gis='git status -u'
export BFG=$CP/bfg-1.13.0.jar
gic () { git commit -m "$1"; }

#==> my Encrypted directories
#  fa | grep Digital0
#  fa | grep Secure0
#  fa | grep Secure1
#  fa | grep Stack

#===> quick-check
alias fe='fdtsEncryptedChanges'

Encrypted=(Digital0 Digital1 Secure0 Secure1 SHG Stack)
fdtsEncryptedChanges () {
  if [ "$PWD" != $Enc ]; then
    if [ -d "$Enc" ]; then
      cd $Enc; pwd
    else
      echo "$Enc ain't there"; return
    fi
  fi
  for i in ${!Encrypted[@]}; do
    ed=${Encrypted[$i]}
    f7z="find . -iname \"$ed*.7z\" | sort | tail -1"
    ed7z=$(eval "$f7z")
    if [ $ed7z ]; then
      tput setaf 5
      eval "find . -iname \"$ed*.7z\" $printfDTsort"
      tput setaf 7
      eval "find -path \"./$ed*\" -newer $ed7z $printfDTsort"
      # - fails to detect change of year
      eval "find \"$core/encrypted\" -name \"$ed*\" -newer $ed7z"
    fi
  done
}

#==> only useful in sbMb
# and not needed as root

if [ $host = 'sbMb' ]; then

  alias rsM='bash $onGH/rsync-drives/sbMb/rsync-Music.sh'
  alias rsV='bash $onGH/rsync-drives/sbMb/rsync-Vs.sh'
  alias rsVe='bash $onGH/rsync-drives/sbMb/rsync-Vs-extra.sh'

  fS () {
    find /mnt/WD30EZRZ/Sync2 -type f -name "*$1*"
  }

fi

#==> Samokovarov's  jump
if [ -s "/usr/bin/jump" ]; then
  eval "$(jump shell)"  # makes further adjustments to  PROMPT_COMMAND
fi

#==> time-sorted lists of files
fa () {
  eval "find * $printfDTsort"
}  # all files

ghi () {
  for f in $(rg -l -tmd 'github.com.+issues'); do sm $f; done | sort > GitHubIssues.txt
  sed -i '/copied\/IT-handy\//d' GitHubIssues.txt
  echo "results are in GitHubIssues.txt"
}  # my GitHub issues

gitc () {
  echo 'vim: nospell:' > git_config.txt
  echo '' >> git_config.txt
  for f in $(fd -HI -tf ^config$); do sm $f; done | sort >> git_config.txt
  echo "results are in git_config.txt"
}

#===> by extension
alias fx='fdtsExt'
# fx gfm
# fx gitignore

fdtsExt () {
  if [ $1 ]; then
    if [ $1 = "gitignore" ]; then
      dtsfile=dts-$1-all.txt
      search=.$1
    else
      dtsfile=dts-$1.txt
      search='\*.$1'
    fi
    eval "fdtsKS $search $dtsfile"
    [[ $1 = @(gitignore|pl|tex|txt) ]] && ctfp $dtsfile
  else
    echo "^ need a file type (= filename extension)"
  fi
}

#===> bbcode
fdtsbbcode () {
  dtsfile=dts-ft_bbcode.txt
  ftListHeader $dtsfile
  rg -ttxt -l --sort modified 'ft=bbcode' >> $dtsfile
  echo "results are in $dtsfile"
}

#===> by keystring in name
alias fk=fdtsKeyString

fdtsKeyString () {
  if [ $1 ]; then
    dtsfile=dts-$1_in_name.txt
    search='\*$1\*'
    eval "fdtsKS $search $dtsfile"
  fi
}

#===> common functionality
ctfp () {
  # corrects to full path
  sed -i "s| \.| $PWD|" $1
}

export printfDTsort='-printf %TY-%Tm-%Td\ %TH:%TM\ %p\\n | sort'

ftListHeader () {
  echo "vim: ft=ftlist nowrap tw=0:" > $1
  echo "" >> $1
  echo $PWD >> $1
  echo "" >> $1
}

fdtsKS () {
  ftListHeader $2
  eval "find -iname \"$1\" $printfDTsort >> $2"
  echo "" >> $2
  echo "results are in $2"
} # $1 being the keystring

#===> in $rsnapshot
fdtsRsnapshot () {
  echo $1
  echo $2
  if [ $2 ]; then
    # eval "find $rsnapshot/*/localhost/$1 -type f -name \"$2\" -printf %TY-%Tm-%Td\ %TH:%TM\ %p\\\n | sort"
    # echo "find $rsnapshot/*/localhost$1 -type f -name \"*$2*\" -printf %T@\ %U\ %TY-%Tm-%Td\ %TH:%TM\ %p\\\n | sort"
    eval "find $rsnapshot/*/localhost$1 -type f -name \"*$2*\" -printf %p\\\n | sort" > $rsnapshot/tds_find
    # echo "find $rsnapshot/*/localhost$1 -type f -name \"*$2*\" -printf %T@\ %p\\\n | sort"
  else
    echo "fdtsRsnapshot <directoryToSearchIn> <fileToSearchFor>"
  fi
}

#==> trash-cli
